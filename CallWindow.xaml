<Window x:Class="SoftphoneKiosk.CallWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Active Announcement" Height="250" Width="350"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None" ResizeMode="NoResize" Topmost="True">
    <Grid VerticalAlignment="Center" HorizontalAlignment="Center">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <TextBlock x:Name="CallTarget" Text="Broadcasting to: " FontSize="18" FontWeight="Bold" Margin="10" Grid.Row="0" HorizontalAlignment="Center"/>
            <TextBlock x:Name="CallTimer" Text="00:00" FontSize="16" Margin="10" Grid.Row="1" HorizontalAlignment="Center"/>
            <Button Content="End Announcement" Width="180" Height="50" Click="EndCall" Background="Red" Foreground="White" Grid.Row="2" HorizontalAlignment="Center" Margin="10"/>
        </Grid>
    </Grid>
</Window>